<% if template %>
  <% palpite_id = 'PALPITE_ID' %>
  <% palpite = {pergunta: '', opcoes: []} %>
<% else %>
  <% palpite_id = "#{i+1}" %>
<% end %>
<div class="palpite">
  <div class="form-group row">
    <label for="palpite_<%= palpite_id %>_pergunta" class="col-sm-2">Pergunta:</label>
    <div class="col-sm-10">
      <input type="text" value="<%= palpite[:pergunta] %>" id="palpite_<%= palpite_id %>_pergunta" name="palpites[][pergunta]" class="form-control">
    </div>
  </div>
  <div class="form-group row">
    <label for="palpite_<%= palpite_id %>_tipo" class="col-sm-2">Tipo:</label>
    <div class="col-sm-10">
      <select id="palpite_<%= palpite_id %>_tipo" name="palpites[][tipo]" class="form-control">
        <option value="checkbox">Checkbox</option>
        <option value="radio">Radio</option>
        <!-- <option value="text">Texto</option> -->
      </select>
    </div>
  </div>
  
  <div class="wrapper">
    <div class="opcoes">
      <% palpite.try(:opcoes).try(:each_with_index) do |opcao, j| %>
        <%= render 'template_opcao', template: false, opcao: opcao, j: j %>
      <% end %>
    </div>

    <div class="container d-flex justify-content-center">
      <button type="button" class="btn btn-info m-1 add-opcao-btn">Adicionar Opção</button>
      <button type="button" href="#" class="btn btn-warning m-1 rem-opcao-btn">Remover Opção</button>
      <button type="button" href="#" class="btn btn-danger m-1 rem-palpite-btn">Remover Pergunta</button>
    </div>
  </div>
  <hr>
</div>